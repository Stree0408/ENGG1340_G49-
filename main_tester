#include <iostream>
#include "execute.h"

using namespace std;

int main()
{
    Board b;
    
    b.customize();      // 보드 크기 커스터마이즈하기
    b.setBoard();       //  메인보드랑 플레이어보드 만들고 모두 . 으로 넣어놓기
    b.printMainBoard(); 
    
    cin >> b.x >> b.y;      // 플레이어가 처음 클릭하는 좌표 (여기기준 3x3은 폭탄없어야함)
    
    b.placeMines(b.x,b.y);      //
    b.printMainBoard();
    b.printPlayerBoard();

    
    b.delDynamic();      // 맨 마지막에, 동적메모리 풀어줘야함
    return 0;
}
